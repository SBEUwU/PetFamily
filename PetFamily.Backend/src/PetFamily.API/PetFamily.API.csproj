        <ImplicitUsings>enable</ImplicitUsings>
        <DockerDefaultTargetOS>Linux</DockerDefaultTargetOS>
        <UserSecretsId>3716dc56-f1ff-442a-b52a-ad8342bcef19</UserSecretsId>
